{% extends 'base.html.twig' %}

{% block title %}Panier - Taekwonkido Phenix{% endblock %}

{% block body %}
    <div class="d-flex justify-content-end">
        <a href="{{ path('app_home') }}" class="btn btn-dark mt-3">Retour à l'accueil</a>
    </div>

    <h1>Mon panier</h1>
    Retrouver l'ensemble des Abonnements et/ou Evénements que vous avez choisi.
    {% if cart|length %}
        <table class="table table-hover mt-3">
            <thead>
            <tr>
                <th scope="col">Produit</th>
                <th scope="col">Quantité</th>
                <th scope="col">Prix</th>
                <th scope="col">Total</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% set total = null %}
            {% for memberShipRate in cart %}
                <tr>
                    <td>{{ memberShipRate.label }}</td>
                    <td>
                        <a href="{{ path('decrease_to_cart', {'id' : product.memberShipRate.id}) }}">
                            <img src="{{ asset('assets/image/bouton-circulaire-moins.png') }}" alt="Retirer un produit" height="17px">
                        </a>
                        {{ product.quantity }}
                        <a href="{{ path('add_to_cart', {'id' : product.memberShipRate.id}) }}">
                            <img src="{{ asset('assets/image/plus.png') }}" alt="Ajouter un produit" height="17px">
                        </a>
                    </td>
                    <td>{{ (product.memberShipRate.price / 100)|number_format(2, ',', '.') }} €</td>
                    <td>{{ ((product.memberShipRate.price * product.quantity ) / 100)|number_format(2, ',', '.') }} €</td>
                    <td>
                        <a href="{{ path('delete_to_cart', { 'id' : product.memberShipRate.id}) }}">
                            <img src="{{ asset('build/poubelle-de-recyclage.png') }}" alt="Supprimer mon produit" height="22px"> <br>
                        </a>
                    </td>
                </tr>
                {% set total = total + (product.memberShipRate.price * product.quantity) %}
            {% endfor %}
            </tbody>
        </table>
        <div class="text-right mb-5">
            <b>Total de mon panier : </b> {{ (total / 100)|number_format(2, ',', '.') }} €
            <a href="{{ path('app_order_details') }}" class="btn btn-dark btn-block mt-3">Continuer</a>
        </div>
        {% else %}
        <hr>
        <p>Votre panier est vide !</p>
        {% endif %}
{% endblock %}
