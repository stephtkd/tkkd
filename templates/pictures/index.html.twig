{% extends 'base.html.twig' %}

{% block title %}Photos - Taekwonkido Phenix{% endblock %}

{% block body %}

    <!-- Carousel / Slide pictures -->
    <div class="carousel">
        <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                {% for key,SlidePicture in SlidePictures %}
                     <li data-target="#carouselExampleCaptions" data-slide-to="{{ key }}" {% if key ==0 %}class="active"{% endif %}></li>
                {% endfor %}
            </ol>
            <div class="carousel-inner">
                {% for key,SlidePicture in SlidePictures  %}
                    <div class="carousel-item {% if key ==0 %}active{% endif %}" >
                        <img src="/upload/{{ SlidePicture.illustration }}" alt="image du carousel">
                        <div class="carousel-caption d-none d-md-block">
                            <h2>{{ SlidePicture.title }}</h2>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <!-- Filtre/recherche par tags et catégories des Albums photos -->
    <div class="col-md-3">
        {{ form(form) }}
    </div>
    <div class="p-4">
        <h4 class="fst-italic">Années des Albums Photos</h4>
        <ol class="list-unstyled mb-0">
            {% for Tag in Tags %}
                <a class="text-decoration-none" href="{{ path('app_tag_slug', { 'slug' : Tag.slug}) }}" style="color:{{ Tag.color }}">{{ Tag.title}}</a>
            {% endfor %}
        </ol>
        <h4 class="fst-italic">Catégories des Albums Photos</h4>
        <ol class="list-unstyled mb-0">
            {% for CategoryAlbum in CategoriesAlbum %}
               <a class="text-decoration-none" href="{{ path('app_category_album_slug', { 'slug' : CategoryAlbum.slug}) }}" style="color:{{ CategoryAlbum.color }}">{{ CategoryAlbum.name}}</a>
            {% endfor %}
        </ol>
    </div>

        <!-- Card for pictures events -->
        <div class="row m-3">
    {% for AlbumPicture in AlbumPictures %}
        <div class="card mb-8 shadow p-3 mb-5 bg-white rounded w-50">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="{{ AlbumPicture.picture }}" class="card-img"  alt="image des album photo">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ AlbumPicture.title|raw }}</h5>
                        <p class="card-text">{{ AlbumPicture.description|raw }}</p>
                    </div>
                    <a href="{{ path('app_pictures_slug', { 'slug' : AlbumPicture.slug}) }}" class="btn btn-dark float-right">Album Photo</a>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}

{% endblock %}

{% block javascript %}

$('.carousel').carousel({
    interval: 2000
})

{% endblock %}