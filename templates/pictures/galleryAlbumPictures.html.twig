{% extends 'base.html.twig' %}

{% block title %}Albums - Taekwonkido Phenix{% endblock %}

{% block body %}
    <div class="m-5">
        <div class="mb-5">
            <h1 class="fw-light text-center text-lg-start mt-4 mb-2">{{ AlbumPicture.title|raw }}</h1>
            <a href="{{ path('app_pictures') }}">Retour au menu des Albums Photos</a>
        </div>

        <hr class="mb-5">

        <!-- Gallery -->
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3">
            {% for PicturesAlbum in AlbumPicture.PicturesAlbums %}
                <div class="col-lg-3 col-md-4 col-6">
                        <img
                                src="/upload/album/{{ PicturesAlbum.images }}"
                                class="img-fluid img-thumbnail mb-3 shadow-1-strong rounded"
                                alt="Photos ou vidÃ©o de l'album"
                        />
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
