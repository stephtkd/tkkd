{% extends 'base.html.twig' %}

{% block title %}Albums Photo - Taekwonkido Phenix{% endblock %}

{% block body %}
    <div class="m-5">
        <div class="mb-5">
            <h1>Pr√©sentation des photos de l'Album <em>{{ AlbumPicture.title|raw }}</em></h1>
            <a href="{{ path('app_pictures') }}">Retour au menu des Albums Photo</a>
        </div>

        <!-- Gallery -->
        <div class="row">
            {% for PicturesAlbum in AlbumPicture.PicturesAlbums %}
                <div class="col-md-4">
                        <img
                                src="/upload/AlbumPicture/{{ PicturesAlbum.images }}"
