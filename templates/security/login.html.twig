{% extends 'base.html.twig' %}

{% block title %}Connexion - Taekwonkido Phenix{% endblock %}

{% block body %}

    <div class="vh-100" style="background-color: #ff6060;">
        <div class="container py-5">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="{{ asset('build/Logo.jpg') }}"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form method="post">
                                        {% if error %}
                                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                        {% endif %}

                                        {% for message in app.flashes('notice') %}
                                            <div class="alert alert-info">{{ message }}</div>
                                        {% endfor %}

                                        {% if app.user %}
                                            <div class="mb-3">
                                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                            </div>
                                        {% endif %}

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                            <span class="h1 fw-bold mb-0">Taekwonkido Phenix</span>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Connexion à votre compte </h5>

                                        <div class="form-outline mb-4">
                                        <label for="inputEmail">Email</label>
                                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                                        </div>

                                        <div class="form-outline mb-4">
                                        <label for="inputPassword">Mot De Passe</label>
                                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                                         </div>

                                        <input type="hidden" name="_csrf_token"
                                               value="{{ csrf_token('authenticate') }}"
                                        >

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-lg btn-dark btn-block mt-3" type="submit">
                                                Se connecter
                                            </button>
                                        </div>

                                        <p class="text-center">Ou souhaitez vous<a href="{{ path('app_register') }}"> créer un compte</a>?</p>
                                        <p class="text-center">Ou j'ai oublié mon<a href="{{ path('app_reset_password') }}"> Mot de passe</a></p>

                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
