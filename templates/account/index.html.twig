{% extends 'base.html.twig' %}

{% block title %}Mon compte - Taekwonkido Phenix{% endblock %}

{% block body %}
    <h1>Mon compte</h1>

    {% if is_granted('ROLE_ADMIN') %}
        <small><a href="{{ path('admin') }}">Vous êtes un administrateur/Accès Backoffice </a></small><br>
    {% endif %}

    Bienvenue {{ app.user.firstname }} dans votre Tableau de bord
    <hr>

    <div class="row">
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('build/book.png') }}" alt="Formulaire d'Adhésion"><br>
                <a href="{{ path('account_member') }}">Gérer mes adhérents</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{  asset('build/repeter.png') }}" alt="Suivie d'Ahdésion"><br>
                <a href="{{ path('app_subscribe_event') }}">Suivre mes inscriptions</a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('build/secure.png') }}" alt="Modifier mon mot de passe"><br>
                <a href="{{ path('app_account_change_password') }}">Modifier mon mot de passe</a>
            </div>
        </div>
    </div>
    <hr>

{% endblock %}
