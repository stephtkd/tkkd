{% extends 'base.html.twig' %}

{% block title %}Formulaire d'Adhésion - Taekwonkido Phenix {% endblock %}

{% block body %}
    <div class="m-5">
        <h1>Formulaire d'Adhésion</h1>
        <a href="{{ path('account_member') }}">Retour</a>
            <hr>
        <div class="justify-content-center">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-12">{{ form_row(form.photoName) }}</div>
                    <div class="col-md-6">{{ form_row(form.firstname) }}</div>
                    <div class="col-md-6">{{ form_row(form.lastName) }}</div>
                    <div class="col-md-6">{{ form_row(form.birthdate) }}</div>
                    <div class="col-md-6">{{ form_row(form.email, {'value' : user.email}) }}</div>
                    <div class="col-md-6">{{ form_row(form.streetAddress, {'value' : user.streetAddress}) }}</div>
                    <div class="col-md-6">{{ form_row(form.postalCode, {'value' : user.postalCode}) }}</div>
                    <div class="col-md-6">{{ form_row(form.city, {'value' : user.city}) }}</div>
                    <div class="col-md-6">{{ form_row(form.nationality) }}</div>
                    <div class="col-md-6">{{ form_row(form.phoneNumber, {'value' : user.postalCode})  }}</div>
                    <div class="col-md-6">{{ form_row(form.sex) }}</div>
                    <div class="col-md-6">{{ form_row(form.emergencyPhone) }}</div>
                    <div class="col-md-6">{{ form_row(form.comment) }}</div>
                    <div class="col-md-5 mx-auto">{{ form_row(form.submit) }}</div>
                </div>
            {{ form_end(form) }}
        </div>
        <hr>
    </div>
{% endblock %}