{% extends 'base.html.twig' %}

{% block title %}Evénement - Taekwonkido Phenix {% endblock %}

{% block body %}

    <article class="post px-3 py-5 p-md-5">
        <div class="mb-4">
            <h1>Présentation de l'événement</h1>
            <a href="{{ path('app_home') }}">Retour à l'accueil</a>
        </div>
        <div class="container single-col-max-width">
            <div class="post-header">
                <h2 class="title mb-2">{{ event.name }}</h2>
            </div>

            <div class="post-body">
                <img class="img-fluid" src="/upload/{{ event.linkimage }}" width="700px" height="auto" alt="image">
                <p class="mt-3">{{ event.description|raw }}</p>
                <p class="mt-3">L'événement commence le {{ event.startDate|date('d/m/Y à H:m') }}</p>
                <p class="mt-3">L'événement fini le {{ event.endDate|date('d/m/Y à H:m') }}</p>
                <p class="mt-3">Date d'ouverture des inscriptions à l'événement : {{ event.registrationOpenDate|date('d/m/Y') }}</p>
                <p class="mt-3">Date limite d'inscription à l'événement : {{ event.registrationDeadline|date('d/m/Y') }}</p>
                <a href="{{ path('app_subscription', { 'id' : event.id }) }}" class="btn btn-dark float-right">J'y participe</a>
            </div>
        </div>
    </article>





{% endblock %}
